// Оставляю на всякий случай под контролем версий чтобы не изобретать каждый раз заново
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "PATH": "${env:PATH}:/usr/local/go/bin"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}
